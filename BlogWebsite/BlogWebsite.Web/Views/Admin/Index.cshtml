@using BlogWebsite.Core.Concrete
@{
    Layout = "_AdminLayout";
}
@model List<UserEntity>

<h1>Admin Index</h1>

@* <button style="position:absolute; right:100px;" class="btn btn-outline-primary" type="button" asp-area="" asp-controller="Admin" asp-action="AuthorCreate">Create</button> *@

<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col"> </th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Transactions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @{
            var i = 1;
            foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a style="margin-right: 20px;" href="/Admin/AuthorUpdate?id=@user.Id">
                            <i class="fa-solid fa-circle-plus fa-xl"></i>
                        </a>
                        <a class="delete" href="/Admin/AuthorDelete?id=@user.Id">
                            <i class="fa-solid fa-circle-minus fa-xl"></i>
                        </a>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

